<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#ff00458c</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#ff00458c</item>

        <!-- colorAccent is used as the default value for colorControlActivated
             which is used to tint widgets -->
        <item name="colorAccent">#fff</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.AppTheme.Widget" parent="@style/Theme.AppCompat">
        <!-- Navigation Drawer highlight color -->
        <item name="android:textColor">@color/black</item>
        <item name="android:activatedBackgroundIndicator">@drawable/activated_background</item>
    </style>








    <!--Card layout styles-->

    <style name="largecard">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">180dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="smallcard">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>
    
</resources>